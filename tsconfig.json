{
  "compilerOptions": {
    "target": "ESNext",               /* Specify the ECMAScript target version (e.g., ES5, ES6, ESNext) */
    "module": "CommonJS",             /* Specify the module system (e.g., CommonJS, ESNext) */
    "outDir": "/js",               /* Output directory for transpiled JavaScript files */
    "rootDir": "./",               /* Source code directory */
    "strict": true,                  /* Enable strict type checking */
    "esModuleInterop": true,          /* Allow interoperability between CommonJS and ES modules */
    "resolveJsonModule": true,       /* Allow importing JSON files as modules */
    "sourceMap": true,               /* Generate source maps for debugging */
    "declaration": true,             /* Generate declaration files (for libraries) */
    "noImplicitAny": true,           /* Raise error on expressions and declarations with an implied 'any' type */
    "strictNullChecks": true,        /* Enable strict null checks */
    "noImplicitThis": true,          /* Raise error on 'this' expressions with an implied 'any' type */
    "alwaysStrict": true,            /* Parse in strict mode and emit "use strict" for each source file */
    "noUnusedLocals": true,          /* Report errors on unused local variables */
    "noUnusedParameters": true,      /* Report errors on unused parameters */
    "noImplicitReturns": true,       /* Report errors when not all code paths return a value */
    "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statements */
    "baseUrl": "./",                 /* Base directory to resolve non-absolute module names */
  },
  "include": ["./**/*.ts"],          /* Specify files to include */
  "exclude": ["node_modules"],       /* Specify directories or files to exclude from compilation */
}
